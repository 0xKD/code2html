{
	"manifest_version": 2,

	"name": "Code2HTML",
	"description": "Syntax highlight your code to pure HTML.",
	"version": "1.0",

	"icons": {
		"16": "img/html16.png",
		"48": "img/html48.png",
		"128": "img/html128.png"
	},

	"permissions": [
		"storage",
		//"http://pygments.appspot.com/",
		"http://hilite.me/api"
	],

	"browser_action": {
		"default_icon": "img/html-icon.png",
		"default_popup": "popup.html"
	}
}